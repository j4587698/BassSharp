<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <TargetFrameworks>net9.0;net8.0</TargetFrameworks>
        <Version>1.0</Version>
        <Authors>Jx</Authors>
        <Company>Jx</Company>
        <Description>Bass .Net Wapper</Description>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageId>JxBassSharp</PackageId>
        <PackageProjectUrl>https://github.com/j4587698/BassSharp</PackageProjectUrl>
        <RepositoryUrl>https://github.com/j4587698/BassSharp</RepositoryUrl>
        <PackageTags>bass</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../README.md">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>
</Project>
